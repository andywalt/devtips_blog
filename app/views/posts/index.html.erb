<div class="container-fluid">
	<h1 class="col-md-10" id="blog_heading">The Blog</h1>
</div>
<div class="container-fluid" id="blog_body">
	<div id="posts" class="transitions-enabled col-sm-12 col-sm-offset-0 col-xs-6 col-xs-offset-2 clearfix">
		<% @posts.each do |post| %>
			<div class="box panel panel-default">
				<%= link_to (image_tag post.image.url(:medium)), post, class: "img-responsive center-block" %>
				<%= link_to post.title, post, class: "post_title" %>
				<div class="panel-body"><%= truncate(post.body, :length => 250, :omission => "...(read more).") %></div>
				<div class="btn-group">
					<%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
					<span class="glyphicon glyphicon-thumbs-up"></span>
						<%= post.get_upvotes.size %>
					<% end %>
				</div>
				<% if post.user == current_user %>
					<div class="crud_links">
						<%= link_to 'Edit', edit_post_path(post) %>
						<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>