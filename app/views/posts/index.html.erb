<div class="container-fluid" id="blog_area">
	<h1 class="col-sm-12 col-sm-offset-0 col-xs-6 col-xs-offset-3" id="blog_title">The Blog</h1>
	<h4><%= will_paginate @posts, previous_label: "New Posts", next_label: "More Posts", class: "col-md-4 col-md-offset-0 col-xs-6 col-xs-offset-3", :id => "paginate_selector" %></h4>
	<div id="posts" class="transitions-enabled col-sm-12 col-sm-offset-0 col-xs-6 col-xs-offset-2 clearfix">
		<% @posts.each do |post| %>
			<div class="box panel panel-default">
				<%= link_to (image_tag post.image.url(:medium)), post, class: "img-responsive center-block" %>
				<%= link_to post.title, post, class: "post_title" %>
				<div class="panel-body" id="panel_body"><%= truncate(post.body, :length => 250, :omission => "...(read more).") %></div>
				<div class="btn-group">
					<%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
					<span class="glyphicon glyphicon-thumbs-up"></span>
						<%= post.get_upvotes.size %>
					<% end %>
				</div>
				<% if post.user == current_user %>
					<div class="crud_links">
						<%= link_to 'Edit', edit_post_path(post) %>
						<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>