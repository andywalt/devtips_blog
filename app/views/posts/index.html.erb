<h1>Blog</h1>

<div class="new_post">
	<% if user_signed_in? %>
	<h2><%= link_to "New Post", new_post_path %></h2>
	<% end %>
</div>

<div class="container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td class="post_title"><%= link_to post.title, post %></td>
				<% if post.user == current_user %>
					<td class="crud_links"><%= link_to 'Edit', edit_post_path(post) %></td>
				<% end %>
			</tr>
			<tr>
				<td class="post_body"><%= truncate(post.body, :length => 250) %></td>
				<% if post.user == current_user %>
					<td class="crud_links"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>