<div class="new_post">
	<% if current_user.try(:admin?) %>
	<h2><%= link_to "New Post", new_post_path %></h2>
	<% end %>
</div>

<div class="container">
	<table class="table table-hover">
		<thead class="blog_table">
			<tr>
				<th></th>
				<th></th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td  class="post_image_thumb" colspan="4"><%= image_tag post.image.url(:medium), class:"post_thumb" %></td>
				<td class="post_title"><%= link_to post.title, post %></td>
				<td class="post_body"><%= truncate(post.body, :length => 100, :omission => "...") %></td>
				<div class="btn-group">
					<td>
						<%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
						<span class="glyphicon glyphicon-thumbs-up"></span>
							<%= post.get_upvotes.size %>
						<% end %>
					</td>
				</div>
				<% if post.user == current_user %>
					<td class="crud_links">
						<%= link_to 'Edit', edit_post_path(post) %>
						<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
					</td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>