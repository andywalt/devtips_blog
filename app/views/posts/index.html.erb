<h1>Blog</h1>
<div class="container">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Title</th>
				<th>Preview</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= truncate(post.body, :length => 100) %></td>
				<td class="crud_links"><%= link_to 'Read', post %></td>
				<% if post.user == current_user %>
					<td class="crud_links"><%= link_to 'Edit', edit_post_path(post) %></td>
					<td class="crud_links"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="new_post">
	<% if user_signed_in? %>
	<h2><%= link_to "New Post", new_post_path %></h2>
	<% end %>
</div>